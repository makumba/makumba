      <section id="example">
        <title>Example</title>
        <source>
      <![CDATA[
<mak:searchForm in="best.Student" name="searchPerson">
    <mak:criterion fields="name"> 
        <mak:searchField />
    </mak:criterion>
    <mak:criterion fields="place">
        <mak:searchField forceInputStyle="single" /> 
    </mak:criterion>  
</mak:searchForm>
