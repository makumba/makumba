        </section>
      <section id="example">
        <title>Example</title>
        <p/>
        <p>
            <pre class="example">
      <![CDATA[
<mak:resultList resultsFrom="searchPerson">
    Name: <mak:value expr="o.name"/> <br/>
</mak:resultList>
      ]]>
    </pre>
        </p>
    </section>  </body>
