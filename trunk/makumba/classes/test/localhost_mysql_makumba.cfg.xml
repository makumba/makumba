<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration
    PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.url">jdbc:mysql://localhost/makumba</property>
		<property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password" />
		<property name="dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
<!--		<property name="hibernate.show_sql">true</property>-->
		<property name="makumba.seed">SEED.txt</property>
		<property name="makumba.prefix">makumbaGeneratedMappings</property>
		<property name="makumba.mdd.list">test.Person,test.Individual,test.Language</property>
<!--		<property name="makumba.schemaUpdate">true</property>-->

		<property name="dbcp.maxActive">15</property>
        <property name="dbcp.maxIdle">5</property>
        <property name="dbcp.maxWait">120000</property>
        <property name="dbcp.whenExhaustedAction">1</property>
        <property name="dbcp.testOnBorrow">true</property>
        <property name="dbcp.testOnReturn">true</property>
        <property name="dbcp.validationQuery">select 1</property>
        <property name="dbcp.ps.maxActive">0</property>
        <property name="dbcp.ps.maxIdle">0</property>
        <property name="dbcp.ps.maxWait">-1</property>
        <property name="dbcp.ps.whenExhaustedAction">2</property>	
	</session-factory>
</hibernate-configuration>
