	<tag>
		<name>editForm</name>
		<tag-class>org.makumba.view.jsptaglib.EditTag</tag-class>
		<body-content>JSP</body-content>
		<description>Forms to create new data</description>
		<attribute>
			<name>object</name>
			<required>true</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>action</name>
			<required>true</required>
