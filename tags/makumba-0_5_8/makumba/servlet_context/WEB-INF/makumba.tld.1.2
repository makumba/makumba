	<tag>
		<name>attribute</name>
		<tag-class>org.makumba.view.jsptaglib.AttributeTag</tag-class>
		<tei-class>org.makumba.view.jsptaglib.AttrTEI</tei-class>
		<body-content>empty</body-content>
		<description>Value of an attribute</description>

		<attribute>
			<name>name</name>
			<required>true</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>var</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>exceptionVar</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>db</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
	</tag>

	<tag>
		<name>form</name>
