		<tei-class>org.makumba.view.jsptaglib.CountTEI</tei-class>
		<body-content>JSP</body-content>
		<description>manipulate lists</description>

		<attribute>
			<name>countVar</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>maxCountVar</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>header</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>

		<attribute>
			<name>footer</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>

		<attribute>
			<name>separator</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>

		<attribute>
			<name>from</name>
			<required>true</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>where</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>orderBy</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>
		
		<attribute>
			<name>groupBy</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>db</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

	</tag>
	<tag>
		<name>object</name>
		<tag-class>org.makumba.view.jsptaglib.ObjectTag</tag-class>
		<tei-class>org.makumba.view.jsptaglib.CountTEI</tei-class>
		<body-content>JSP</body-content>
		<description>manipulate record</description>

		<attribute>
			<name>countVar</name>
			<required>false</required>
