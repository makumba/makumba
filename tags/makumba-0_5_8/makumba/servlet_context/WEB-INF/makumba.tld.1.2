			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>db</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>
	</tag>

	<tag>
		<name>value</name>
		<tag-class>org.makumba.view.jsptaglib.ValueTag</tag-class>
		<tei-class>org.makumba.view.jsptaglib.VarTEI</tei-class>
		<body-content>empty</body-content>
		<description>Value of an expression</description>

		<attribute>
			<name>expr</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>

		<attribute>
			<name>var</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
		</attribute>

		<attribute>
			<name>printVar</name>
			<required>false</required>
			<rtexprvalue>false</rtexprvalue>
