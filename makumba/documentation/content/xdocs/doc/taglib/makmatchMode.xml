      <section id="example">
        <title>Example</title>
        <source>
      <![CDATA[
<mak:searchForm in="best.Student" name="searchPerson">
    <mak:criterion fields="name">
        <mak:matchMode matchModes="contains, equals, begins, ends">
        <mak:searchField />
    </mak:criterion>
</mak:searchForm>
      ]]>
  </source>
    </section>  </body>
